@model IEnumerable<WorkflowEngineV1._0.Models.Workflow>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div id="sidebar">
    <div class="logo">WorkflowEngineV1.0</div>
        <div class="task" data-id="" draggable="true">
            <i class="fa-solid fa-flag-checkered">Start</i>
            <div class="dot"></div>
        </div>
        <div class="task" data-id="" draggable="true">
            
            <i class="fa-sharp fa-solid fa-envelope">E-mail</i>
            <div class="dot"></div>
        </div>
        <div class="task" data-id="" draggable="true">
            <i class="fa-solid fa-flag" style="display: flex; justify-content: space-between;">Finish</i>
            <div class="dot"></div>
        </div>
        <div class="task" data-id="" draggable="true">
            <i class="fa-sharp fa-regular fa-folder-open">Create Doc</i>
            <div class="dot"></div>
        </div>

        <div class="buttons-container">

        <div>
            @foreach(var workflow in Model)
            {
                    
                    <button id="workflow-btn" data-workflow-id="@workflow.Id">@workflow.WorkflowName</button>
            }
        </div>


        <button class="save-btn">Save Workflow</button>
        </div>
    </div>
    <div id="droppable-area">
        <!-- Droppable area for tasks -->
        <canvas id="canvas"></canvas>
          
    </div>
</body>
</html>
